    <script>
      function muestraReloj() {
        var fechaFinal = new Date(2023, 7, 28, 12, 0, 0);
        var fechaActual = new Date();
        var fechaDiferencia = fechaFinal - fechaActual;
        var diasRestantes = Math.floor(fechaDiferencia / (1000 * 60 * 60 * 24));
        var horasRestantes = Math.floor(
          (fechaDiferencia % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60)
        );
        var minutosRestantes = Math.floor(
          (fechaDiferencia % (1000 * 60 * 60)) / (1000 * 60)
        );
        var segundosRestantes = Math.floor(
          (fechaDiferencia % (1000 * 60)) / 1000
        );

        if (diasRestantes < 10) {
          diasRestantes = "0" + diasRestantes;
        }
        if (horasRestantes < 10) {
          horasRestantes = "0" + horasRestantes;
        }
        if (minutosRestantes < 10) {
          minutosRestantes = "0" + minutosRestantes;
        }
        if (segundosRestantes < 10) {
          segundosRestantes = "0" + segundosRestantes;
        }

        document.getElementById("dias").innerHTML = diasRestantes;
        document.getElementById("horas").innerHTML = horasRestantes;
        document.getElementById("minutos").innerHTML = minutosRestantes;
        document.getElementById("segundos").innerHTML = segundosRestantes;
      }

      window.onload = function () {
        muestraReloj();
        setInterval(muestraReloj, 1000);
      };
    </script>
